package Array;

public class check_array_Sorted_not {

	public static void main(String[] args) {

		int arr[] = { 1, 2, 3 };
		int n = arr.length;
		System.out.println(checkArray(arr, n));

	}

	public static boolean checkArray(int arr[], int n) {
		for (int i = 1; i < n; i++) {
			if (arr[i] > arr[i - 1]) {

			} else {
				return false;
			}
		}
		return true;
	}

}
