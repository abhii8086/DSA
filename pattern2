public class patterns {

public static void main(String[] args) {
//         * 
//         * * 
//         * * * 
//         * * * * 
//         * * * * *
		int rows = 5;
		int col = 5;

		for (int i = 1; i <= rows; i++) {
			for (int j = 1; j <= i; j++) {   // here just update the j as per i to make this pattern
				System.out.print(" " + "*");
			}
			System.out.println();
		}

	}

}
