package non_linearDataStructure;

import java.util.Scanner;

public class Trees {

	static Node create() {

		Node root = null;
		Scanner sc = new Scanner(System.in);
		System.out.println("Enter data");
		int data = sc.nextInt();

		if (data == -1)
			return null;

		root = new Node(data);
		System.out.println("Enter the left child of Node:" + root.data);
		root.left = create();
		System.out.println("Enter the right child of Node:" + root.data);
		root.right = create();
		return root;
	}

	public static void main(String[] args) {
		Node root = create();
	}

public void in_order(){}
public void pre_order(){}
public void post_order(){}


class Node {
	int data;
	Node left = null;
	Node right = null;

	Node(int data) {
		this.data = data;
		this.left = null;
		this.right = null;
	}
}
